FROM registry.fedoraproject.org/fedora-minimal:43

RUN dnf install -y procps-ng inotify-tools stress stress-ng vim vim-powerline powerline tmux tmux-powerline tree jq yq golang && \
    dnf clean all && \
    rm -rf /var/cache/dnf/*

COPY .bashrc .tmux.conf .vimrc /root/

ENTRYPOINT ["/usr/bin/tmux", "new", "-A"]
